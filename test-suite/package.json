{
    "name": "firebase-test-suite",
    "version": "1.0.0",
    "description": "Tests for firebase (emulator)",
    "private": true,
    "scripts": {
        "test": "jest",
        "test:java-emulator": "() { firebase emulators:exec --only firestore \"jest --maxConcurrency 1 ${${(q)@}}\" }",
        "test:rust-emulator": "() { export RUST_EMULATOR=true; export FIRESTORE_EMULATOR_HOST=127.0.0.1:8080; ../target/debug/firestore-emulator & PID=$!; jest \"$@\"; RET=$?; kill -INT $PID; return $RET }",
        "build:rust": "cd .. && cargo build",
        "lint": "eslint tests && prettier -c tests"
    },
    "license": "UNLICENSED",
    "dependencies": {
        "@skunkteam/sherlock": "^8.0.0",
        "@skunkteam/sherlock-utils": "^8.0.0",
        "concurrently": "^8.2.2",
        "firebase": "^10.8.1",
        "firebase-admin": "^12.0.0",
        "lodash": "^4.17.21",
        "ms": "^2.1.3"
    },
    "devDependencies": {
        "@types/jest": "^29.5.10",
        "@types/lodash": "^4.14.202",
        "@types/ms": "^0.7.34",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "firebase-tools": "^13.0.3",
        "jest": "^29.7.0",
        "jest-extended": "^4.0.2",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.2"
    }
}
